<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="users.LoginActivity">

    <ImageView
        android:src="@drawable/ic_kembali"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/etresetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font_judul"
        android:text="Atur Ulang Password"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:textSize="28dp"
        android:textStyle="bold"
        android:background="@drawable/splash"
        android:padding="10dp" />

    <EditText
        android:id="@+id/pass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etresetpass"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/splash"
        android:gravity="center"
        android:fontFamily="@font/font_deskripsi"
        android:padding="10dp"
        android:text="Password Baru"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/pass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/splash"
        android:gravity="center"
        android:fontFamily="@font/font_deskripsi"
        android:padding="10dp"
        android:text="Konfirmasi Password Baru"
        android:textColor="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/pass2"
        android:layout_marginTop="20dp"
        android:width="150dp"
        android:fontFamily="@font/font_judul"
        android:layout_centerHorizontal="true"
        android:text="Atur Ulang Password"
        android:textAllCaps="false" />

</RelativeLayout>