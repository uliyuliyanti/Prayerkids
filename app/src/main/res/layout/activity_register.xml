<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="users.LoginActivity">

    <ImageView
        android:src="@drawable/ic_kembali"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/etdaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font_judul"
        android:text="DAFTAR"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:textSize="28dp"
        android:textStyle="bold"
        android:background="@drawable/splash"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etusername2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etdaftar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/splash"
        android:fontFamily="@font/font_deskripsi"
        android:gravity="center"
        android:padding="10dp"
        android:text="Username"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/etname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etusername2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/splash"
        android:fontFamily="@font/font_deskripsi"
        android:gravity="center"
        android:padding="10dp"
        android:text="Nama"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etname"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/splash"
        android:fontFamily="@font/font_deskripsi"
        android:gravity="center"
        android:padding="10dp"
        android:text="Email"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/ettlp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etemail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/splash"
        android:fontFamily="@font/font_deskripsi"
        android:gravity="center"
        android:padding="10dp"
        android:text="No. Telepon"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/etpassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ettlp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/splash"
        android:gravity="center"
        android:fontFamily="@font/font_deskripsi"
        android:padding="10dp"
        android:text="Password"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btndaftar2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/ettlp"
        android:layout_marginTop="76dp"
        android:width="150dp"
        android:fontFamily="@font/font_judul"
        android:layout_centerHorizontal="true"
        android:text="Daftar"
        android:textAllCaps="false" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/btndaftar2"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textSize="10dp"
        android:fontFamily="@font/font_deskripsi"
        android:text="Sudah memiliki akun ?"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/btnlogin2"
        android:clickable="true"
        android:textSize="10dp"
        android:fontFamily="@font/font_deskripsi"
        android:text="  Login"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>
    </LinearLayout>

</RelativeLayout>